/* pages/map/map.wxss */


page {
  height: 100%;
  font-size: 30rpx;
}

.map {
  width: 100%;
  height: 100%;
}

.hotelInfo {
  position: fixed;
  width: 700rpx;
  height: 180rpx;
  bottom: 20rpx;
  left: 50%;
  margin-left: -350rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.hotelName {
  height: 100rpx;
  line-height: 50rpx;
  width: 530rpx;
  margin-left: 25rpx;
  font-weight: 600;
  word-break: break-all;
  word-wrap: break-word;
  white-space: pre-line;
}

.hotelAddress {
  height: 80rpx;
  line-height: 40rpx;
  width: 530rpx;
  margin-left: 25rpx;
  font-size: 23rpx;
}

.navigationIcon{
  position: absolute;
  height: 100rpx;
  width: 100rpx;
  bottom: 40rpx;
  right: 20rpx;
}
.navigation{
  position: fixed;
  background-color: #ddd;
}