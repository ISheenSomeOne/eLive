/* pages/myHotel/myHotel.wxss */
page {
  background-color: rgb(243, 243, 243);
  font-size: 30rpx;
  position: relative;
}

.topNav{
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  top: 0;
  background-color: #fff;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  z-index: 0;
  
}
.topNavItem{
  height: 80rpx;
  width: 150rpx;
  letter-spacing: 1rpx;
  text-align: center; 
  font-size: 26rpx;
  color: #999;
}
.active{
  color: #ef6c00;
  border-bottom: 4rpx solid #ef6c00;
}

.clear {
  clear: both;
  overflow: hidden;
}
       navigator {
  display: inline;
}

.list {
  margin: 10rpx auto;
  width: 720rpx;
  border-top: 2rpx solid rgb(221, 221, 221);
  margin-top: 230rpx;
}

.imgBox {
  float: left;
  height: 170rpx;
  width: 250rpx;
}

.img {
  height: 170rpx;
  width: 250rpx;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}
.pitch{
  float: left;
  width: 50rpx;
  height: 50rpx;
  padding-top: 50rpx;
}

.list_item {
  position: relative;
  margin-top: 15rpx;
  height: 170rpx;
  border-radius: 15rpx;
  box-shadow: 0rpx 3rpx 10rpx rgb(190, 190, 190);
  z-index: -1;
}

.info {
  float: left;
  margin: 10rpx 15rpx;
  font-size: 28rpx;
  width: 300rpx;
}

.list_else{
  margin-top: 230rpx;
}

.list_item_else {
   width: 720rpx;
  border-top: 2rpx solid rgb(221, 221, 221);
  position: relative;
  margin-top: 15rpx;
  height: 170rpx;
  border-radius: 15rpx;
  box-shadow: 0rpx 3rpx 10rpx rgb(190, 190, 190);
  margin : 15rpx auto;
  z-index: -1;
}



