/* pages/team/edu/orderInfo/orderInfo.wxss */
.infoBox {
  width: 650rpx;
  margin: 20rpx auto;
  font-size: 28rpx;
  padding: 10rpx;
}

.infoTitle {
  background-color: #1485ee;
  color: #fff;
  font-weight: bold;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
}

.infoItem {
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid rgb(248, 248, 248);
}

.itemLeft {
  font-weight: bold;
  height: 100%;
  width: 140rpx;
}

.itemRight {
  width: 500rpx;
}

.itemRight view {
  color: #07c160;
}

.itemRight text {
  margin-left: 20rpx;
  font-size: 24rpx;
  padding: 8rpx 14rpx;
  border-radius: 5rpx;
  background-color: #1485ee;
  color: #fff;
}

.state {
  font-size: 50rpx;
  text-align: center;
  color: #f06c00;
}

.colorGreen {
  color: #07c160;
}

.stateTip {
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 22rpx;
  color: #999;
  letter-spacing: 1rpx;
}

.remainingTime {
  color: #f06c00;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.remainingTimeItem {
  border: 2rpx solid #f06c00;
  font-size: 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  margin: 15rpx 20rpx;
}

.pay {
  width: 100%;
  text-align: center;
  margin: 20rpx auto 40rpx auto;
  height: 70rpx;
  border-radius: 10rpx;
  line-height: 70rpx;
  font-size: 35rpx;
  color: #fff;
  background-color: #f06c00;
  letter-spacing: 1rpx;
}

.pay:active {
  background-color: #c25700;
  box-shadow: #999 0 2rpx 8rpx;
}