/* pages/evaluation/evaluation.wxss */

page {
  background-color: rgb(243, 243, 243);
  font-size: 30rpx;
}

.topBox {
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  border-bottom: 2rpx #eee solid;
}

.allRate {
  float: left;
  text-align: center;
  font-size: 34rpx;
  color: #f06c00;
  height: 140rpx;
  width: 230rpx;
  line-height: 140rpx;
}

.allRate text {
  font-size: 26rpx;
}

.rateBox {
  float: left;
  height: 140rpx;
  width: 520rpx;
}

.rateItem {
  float: left;
  height: 70rpx;
  line-height: 70rpx;
  width: 260rpx;
}

.starConst {
  float: left;
  font-size: 24rpx;
  color: #777;
}

.topStarBox {
  float: left;
  margin: 20rpx 0 0 10rpx;
}

.rateType{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  box-shadow: 0rpx 5rpx 10rpx rgb(190, 190, 190);
}
.rateBtn{
  float: left;
  margin: 25rpx 0 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  border-radius: 50rpx;
  padding: 0 20rpx;
  background-color: rgb(247, 227, 211);
  color: #f06c00;
}
.active{
  background-color: #f06c00;
  color: #fff;
}

.userRateBox{
  position: relative;
  width: 670rpx;
  margin: 20rpx auto 0 auto;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0rpx 3rpx 10rpx rgb(190, 190, 190);
  border-radius: 10rpx;
}
.userRateTop{
  position: relative;
  width: 100%;
  height: 80rpx;
}

.userAvatar{
  float: left;
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}
.userRateTitle{
  float: left;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.userName{
  font-size: 28rpx;
  font-weight: 600;
  line-height: 50rpx;
}
.useRateDate{
  font-size: 22rpx;
  line-height: 30rpx;
  color: #777;
}
.roomType{
  position: absolute;
  top: 0;
  right: 0;
  font-size: 26rpx;
  color: #777;
}
.userStarBox{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: 600;
  font-size: 24rpx;
}
.userRateConst{
  float: left;
}
.userRateStarBox{
  float: left;
  margin: 15rpx 0 0 10rpx;
}
.userRateCont{
  width: 100%;
  color: rgb(74, 74, 74);
  letter-spacing: 1rpx;
  max-height: 130rpx;
  overflow: auto;
  line-height: 35rpx;
  font-size: 26rpx;
  margin-top: 10rpx;
}
.userRatePic{
  margin-top: 20rpx;
  width: 100%;
  max-height: 180rpx;
  display: flex;
  flex-direction: row;
  justify-content: start;
}

.userRatePicItem{
  margin-left: 10rpx;
  height: 160rpx;
  width: 160rpx;
  border-radius: 6rpx;
}
.goodBox{
  width: 100%;
  height: 60rpx;
}
.good{
  float: right;
  margin-top: 15rpx;
  height: 34rpx;
  line-height: 34rpx;
  width: 100rpx;
  border: 1rpx solid #999;
  border-radius: 50rpx;
  text-align: center;
  font-size: 20rpx;
  color: #999;
}
.gooIcon{
  float: left;
  margin-left: 10rpx;
  height: 30rpx;
  width: 30rpx;
}
.hotelRateBox{
  height: 100%;
  padding: 20rpx;
  background-color: rgb(243, 243, 243);
  border-radius: 10rpx;
}
.hotelTitle{
  height: 50rpx;
  width: 100%;
}
.hotelName{
  float: left;
  font-size: 26rpx;
  color: rgb(0, 79, 115);
}
.hotelIcon{
  float: left;
  margin: 5rpx 0 0 10rpx;
  height: 30rpx;
  width: 30rpx;
  color: #43a047
}
.hotelRate{
  color: #707070;
  font-size: 26rpx;
  max-height: 130rpx;
  overflow: auto;
  line-height: 35rpx;
  letter-spacing: 1rpx;
}