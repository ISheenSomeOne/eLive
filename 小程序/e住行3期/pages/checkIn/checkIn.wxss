/* pages/checkIn/checkin.wxss */

/* 模态框 */

.fl {
  float: left;
}

.modalBg {
  position: fixed;
  z-index: 11;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.4);
}

.chooseCouponBox {
  width: 670rpx;
  padding: 1rpx 20rpx 20rpx 20rpx;
  margin: 200rpx auto 0 auto;
  background-color: rgb(243, 243, 243);
  border-radius: 10rpx;
}

.done {
  float: right;
  margin: 10rpx 0;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 10rpx;
  width: 80rpx;
  color: #fff;
  background-color: rgb(7, 193, 97);
}

.mgtop {
  width: 100%;
  height: 750rpx;
  overflow: auto;
}

.roomItem {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #f06c00;
  color: #fff;
  border-radius: 15rpx;
  margin-top: 30rpx;
}

.chooseConst {
  text-align: left;
  font-weight: bold;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx #ddd solid;
}

.modalBox {
  height: 200rpx;
  margin: 20rpx auto 0 auto;
  width: 670rpx;
  z-index: 100;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0rpx 3rpx 10rpx rgb(190, 190, 190);
}

.couponBox {
  float: left;
  height: 200rpx;
  width: 200rpx;
  background: linear-gradient(to top, rgba(214, 20, 85, 0.836), rgb(239, 96, 144));
  border-bottom-left-radius: 10rpx;
  border-top-left-radius: 10rpx;
  color: #fff;
  font-size: 25rpx;
  text-align: center;
}

.couponPrice {
  padding-top: 30rpx;
  font-size: 35rpx;
}

.couponPrice text {
  font-size: 55rpx;
}

.couponConst {
  margin-top: 10rpx;
}

.couponInfo {
  position: relative;
  float: left;
  width: 450rpx;
  height: 200rpx;
  margin-left: 20rpx;
}

.useStatusIcon {
  float: left;
  margin: 8rpx 0 0 7rpx;
  height: 25rpx;
  width: 25rpx;
}

.couponName {
  font-weight: 600;
  margin-top: 10rpx;
}

.couponCont {
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #777;
}

page {
  font-size: 30rpx;
  color: #333;
  background-color: rgb(243, 243, 243);
}

.hotelInfoBox {
  width: 700rpx;
  margin: 20rpx auto 10rpx auto;
  background-color: #fff;
  border-radius: 15rpx;
}

.hotelItem {
  height: 150rpx;
  width: 100%;
  margin: 20rpx 0;
  border-radius: 15rpx;
  box-shadow: 0rpx 3rpx 10rpx #ddd;
}

.hotelImage {
  margin: 10rpx 0 0 10rpx;
  height: 130rpx;
  width: 130rpx;
  border-radius: 50%;
}

.rightBox {
  height: 150rpx;
  width: 480rpx;
  padding-left: 20rpx;
}

.infoBox {
  font-size: 26rpx;
  padding: 10rpx 0;
}

.hotelInfo {
  width: 650rpx;
  margin: 0 auto 15rpx auto;
}

.hotelName {
  font-size: 35rpx;
  font-weight: 600;
  height: 50rpx;
  line-height: 50rpx;
  width: 320rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.detailBox {
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 5rpx;
  font-weight: 500;
  width: 150rpx;
  float: right;
}

.detailIcon {
  float: right;
  margin-top: 11rpx;
  height: 30rpx;
  width: 30rpx;
}

.detailConst {
  float: right;
  font-size: 26rpx;
  color: #888;
}

.roomInfoBox {
  height: 50rpx;
  max-width: 330rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 5rpx;
}

.roomInfo {
  float: left;
  margin-right: 15rpx;
  font-size: 24rpx;
}

.timeInfoBox {
  height: 40rpx;
  line-height: 40rpx;
  width: 100%;
  max-width: 330rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.time {
  float: left;
  margin-right: 15rpx;
  font-size: 24rpx;
}

.owner {
  float: right;
  text-align: right;
  width: 250rpx;
  color: #e24242;
}

.roomServiceBox {
  width: 720rpx;
  margin: 20rpx auto 0 auto;
  background-color: #fff;
  border-radius: 15rpx;
}

.roomService {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 2rpx solid rgb(243, 243, 243);
}

.servieConst {
  float: left;
  margin-left: 20rpx;
  font-weight: 600;
}

.allServie {
  float: right;
  margin-right: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  width: 200rpx;
}

.allServiceIcon {
  float: right;
  margin-top: 17rpx;
  width: 30rpx;
  height: 30rpx;
}

.allServiceConst {
  float: right;
  font-size: 26rpx;
  color: #888;
}

.servicList {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
}

.serviceBox {
  height: 130rpx;
  width: 100rpx;
  padding-top: 20rpx;
}

.serviceImg {
  height: 70rpx;
  width: 70rpx;
  margin-left: 15rpx;
}
.serviceImg2 {
  height: 60rpx;
  width: 60rpx;
  margin-left: 20rpx;
}

.serviceName {
  text-align: center;
  font-size: 24rpx;
}

.open {
  margin: 50rpx auto 30rpx auto;
  font-size: 32rpx;
  height: 80rpx;
  width: 600rpx;
  line-height: 80rpx;
  border-radius: 50rpx;
  background: linear-gradient(to right, rgb(240, 109, 0), rgb(250, 139, 0));
  color: #fff;
  text-align: center;
}
