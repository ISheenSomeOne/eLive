/* pages/vip/vip.wxss */

page {
  position: relative;
  font-size: 30rpx;
  color: #333;
  background-color: rgb(243, 243, 243);
}

.vipInfoBox {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 15rpx;
  height: 250rpx;
  width: 700;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0rpx 3rpx 10rpx rgb(190, 190, 190);
}

.leftBox {
  position: relative;
  padding: 10rpx;
  height: 230rpx;
  width: 180rpx;
}

.avatar {
  height: 105rpx;
  width: 105rpx;
  margin: 20rpx auto;
  border-radius: 500rpx;
  background-color: #fff;
  box-shadow: 2rpx 2rpx 10rpx #ddd;
  padding: 10rpx;
}

.avatarImg {
  height: 105rpx;
  width: 105rpx;
  border-radius: 50rpx;
}

.userName {
  margin-top: 30rpx;
  text-align: center;
  font-weight: bold;
  background-color: rgba(247, 196, 78, 0.9);
  border-radius: 10rpx;
  padding: 10rpx 0;
  color: #fff;
}

.midBox {
  width: 310rpx;
  height: 230rpx;
  padding: 10rpx;
}

.levelBox {
  width: 100%;
  height: 170rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.myLevelBox {
  height: 170rpx;
  width: 170rpx;
  line-height: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.mylevelIcon {
  margin: auto 0;
  height: 50rpx;
  width: 50rpx;
}

.mylevel {
  margin: auto 0;
  height: 30rpx;
  line-height: 30rpx;
  width: 100rpx;
  padding-right: 10rpx;
  font-size: 20rpx;
  text-align: center;
  border-bottom-right-radius: 50rpx;
  border-top-right-radius: 50rpx;
  background-image: -webkit-linear-gradient(left, rgb(247, 196, 78), rgb(228, 158, 67));
  color: #fff;
}

.upgradeBox {
  /* position: relative; */
  width: 130rpx;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.upgradeLine {
  position: relative;
  height: 5rpx;
  width: 100%;
  /* background-color: #bbb; */
  background-image: -webkit-linear-gradient(left, rgb(247, 196, 78), rgb(228, 158, 67));
}

.upgradeLine::after {
  content: '升级';
  font-size: 20rpx;
  position: absolute;
  padding: 0 5rpx;
  height: 24rpx;
  top: -24rpx;
  right: 0;
  background-color: rgb(228, 158, 67);
  color: #fff;
  border-top-left-radius: 5rpx;
  border-top-right-radius: 5rpx;
}

.upgrade {
  font-size: 20rpx;
  text-align: center;
}

.integral {
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  color: #777;
}

.integral text {
  font-size: 32rpx;
  color: #333;
}

.rightBox {
  width: 150rpx;
  height: 230rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* .nextLevel{
  font-size: 24rpx;
  margin: 20rpx auto;
} */

.levelIcon {
  height: 140rpx;
  width: 140rpx;
  margin: auto;
}


.vipEntrance {
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  width: 700rpx;
  margin: 0 auto 15rpx auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 40rpx;
  font-weight: bold;
}

.vipPrivilege {
  height: 150rpx;
  width: 340rpx;
  background-image: -webkit-linear-gradient(left, rgb(247, 196, 78), rgb(228, 158, 67));
  color: #fff;
  border-radius: 15rpx;
  box-shadow: 0rpx 3rpx 10rpx rgb(190, 190, 190);
}

.recharge {
  height: 150rpx;
  width: 340rpx;
  background-image: -webkit-linear-gradient(left, rgb(78, 213, 247), rgb(67, 169, 228));
  color: #fff;
  border-radius: 15rpx;
  box-shadow: 0rpx 3rpx 10rpx rgb(190, 190, 190);
}

.myOver {
  height: 150rpx;
  width: 340rpx;
  background: linear-gradient(to right, rgb(250, 139, 0),rgb(240, 109, 0) );
  color: #fff;
  border-radius: 15rpx;
  box-shadow: 0rpx 3rpx 10rpx rgb(190, 190, 190);
}

.myOver text {
  font-size: 32rpx;
  font-weight: normal;
  background-color: rgba(255, 255, 255, 0.303);
  border-radius: 8rpx;
  padding: 5rpx 15rpx;
}

.card{
  height: 150rpx;
  width: 340rpx;
  background-image: -webkit-linear-gradient(left, rgb(242, 117, 117), rgb(221, 29, 29));
  color: #fff;
  border-radius: 15rpx;
  box-shadow: 0rpx 3rpx 10rpx rgb(190, 190, 190);
}

.pointsRecord {
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  width: 700rpx;
  margin: 0 auto 15rpx auto;
  background-image: -webkit-linear-gradient(left, rgb(237, 174, 253), rgb(177, 67, 228));
  color: #fff;
  border-radius: 15rpx;
  font-size: 40rpx;
  font-weight: bold;
  box-shadow: 0rpx 3rpx 10rpx rgb(190, 190, 190);
}

.transaction{
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  width: 700rpx;
  margin: 0 auto 15rpx auto;
  background-image: -webkit-linear-gradient(left, rgb(99, 240, 111), rgb(18, 172, 44));
  color: #fff;
  border-radius: 15rpx;
  font-size: 40rpx;
  font-weight: bold;
  box-shadow: 0rpx 3rpx 10rpx rgb(190, 190, 190);
}

.top{
  color: rgb(228, 158, 67);
  font-weight: bold;
}